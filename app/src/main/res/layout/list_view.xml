<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency"
        style="@style/text_view"
        android:text="@string/currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/buy"
        style="@style/text_view"
        android:layout_marginTop="@dimen/view_margin"
        android:text="@string/buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sale"
        style="@style/text_view"
        android:layout_marginTop="@dimen/view_margin"
        android:text="@string/sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_first"
        style="@style/text_view"
        android:layout_marginStart="44dp"
        app:layout_constraintEnd_toStartOf="@+id/currency_second"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/currency"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_second"
        style="@style/text_view"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/currency_first"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rate_buy"
        style="@style/text_view"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/currency_first"
        app:layout_constraintTop_toBottomOf= "@+id/currency_first"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rate_sale"
        style="@style/text_view"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rate_buy"
        app:layout_constraintTop_toBottomOf="@+id/rate_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>